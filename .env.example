# Environment Configuration Template
# Copy this file to .env and update with your actual values

# Flask Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production-make-it-long-and-random
FLASK_ENV=production
DEBUG=False

# File Upload Configuration
UPLOAD_FOLDER=uploads
OUTPUT_FOLDER=outputs
MAX_CONTENT_LENGTH=100

# CORS Configuration
CORS_ORIGINS=*

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log

# Database Configuration (if using database features)
DATABASE_URL=postgresql://username:password@localhost:5432/dbname
MYSQL_URL=mysql://username:password@localhost:3306/dbname

# Cloud Storage (if needed)
CLOUD_SECRET_KEY=your-cloud-secret-key
CLOUD_ACCESS_KEY=your-cloud-access-key

# Security Configuration
RATE_LIMIT_ENABLED=True
MAX_REQUESTS_PER_MINUTE=60

# Performance Configuration
WORKERS=4
TIMEOUT=300